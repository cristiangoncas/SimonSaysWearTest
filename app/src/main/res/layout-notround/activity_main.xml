<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black"
        tools:context="com.cristiangoncas.wearexample.MainActivity"
        tools:deviceIds="wear">

    <Button
            android:id="@+id/yellow"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/rounded_yellow_light"
            android:layout_marginTop="-10dp"
            android:enabled="false"/>

    <Button
            android:id="@+id/red"
            android:layout_width="45dp"
            android:layout_height="135dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/rounded_red_light"
            android:layout_marginStart="-10dp"
            android:enabled="false"/>

    <Button
            android:id="@+id/green"
            android:layout_width="45dp"
            android:layout_height="135dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/rounded_green_light"
            android:layout_marginEnd="-10dp"
            android:enabled="false"/>

    <Button
            android:id="@+id/blue"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:layout_marginBottom="-10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/rounded_blue_light"
            android:enabled="false"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

            <Button
                    android:id="@+id/decrease_level"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:text="@string/minus_symbol"/>

            <TextView
                    android:id="@+id/level"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"/>

            <Button
                    android:id="@+id/increase_level"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="@string/plus_symbol"/>
        </LinearLayout>

        <Button
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/txt_start"/>
    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>
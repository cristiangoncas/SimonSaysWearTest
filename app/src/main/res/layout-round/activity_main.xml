<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black"
        tools:context="com.cristiangoncas.wearexample.MainActivity"
        tools:deviceIds="wear">

    <Button
            android:id="@+id/yellow"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/rounded_yellow_light"
            android:enabled="false"/>

    <Button
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/rounded_red_light"
            android:layout_marginTop="8dp"
            android:enabled="false"/>

    <Button
            android:id="@+id/green"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/rounded_green_light"
            android:enabled="false"/>

    <Button
            android:id="@+id/blue"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginBottom="-25dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/rounded_blue_light"
            android:enabled="false"/>

    <LinearLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp">

            <android.support.wearable.view.CircularButton
                    android:id="@+id/decrease_level"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:enabled="false"
                    android:src="@mipmap/minus"/>

            <TextView
                    android:id="@+id/level"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:paddingTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="8pt"
                    android:layout_toEndOf="@+id/decrease_level"/>

            <android.support.wearable.view.CircularButton
                    android:id="@+id/increase_level"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@+id/level"
                    android:src="@mipmap/plus"/>
        </LinearLayout>

        <Button
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_start"/>

    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>